ul li {
  list-style: none;
}

.track-rcol {
  font-size: 12px;
  width: 100%;
  border: 1px solid #eee;
}

.track-list {
  margin: 20rpx 0;
  padding-left: 20px;
}

.track-list li {
  position: relative;
  width:100%;
  padding: 20rpx 0 0 20rpx;
  height: 18px;
  line-height: 18px;
  border-left: 1px solid #d9d9d9;
  color: #999;
}

.track-list li.first {
  color: red;
  padding-top: 0;
  border-left-color: #fff;
}

.track-list li .node-icon {
  position: absolute;
  left: -6px;
  top: 50%;
  width: 11px;
  height: 11px;
  z-index: 2;
}

.track-list li .time {
  margin-right: 20px;
  position: relative;
  top: 4px;
  display: inline-block;
  vertical-align: middle;
}

.track-list li .txt {
  max-width: 90%;
  position: relative;
  top: 4px;
  display: inline-block;
  vertical-align: middle;
}

.track-list li.first .time {
  margin-right: 20px;
}

.track-list li.first .txt {
  max-width: 90%;
}
